{
    "env": {
        "browser": true,
        "commonjs": true,
        "mocha": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "mocha"
    ],
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": "off",
        "default-case": "off",
        "no-plusplus": "off",
        "comma-dangle": "off",
        "no-return-assign": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "no-array-constructor": "off",
        "mocha/no-exclusive-tests": "error",
        "import/no-extraneous-dependencies": "off"
    }
}
